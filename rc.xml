    <!-- Switch tiling -->
    <keybind key="W-u">
      <action name="If">
        <query target="default">
          <maximizedvertical>yes</maximizedvertical>
        </query>
        <!-- Switch to horizontal -->
        <then>
          <action name="UnmaximizeFull"/>
          <action name="MoveResizeTo">
            <height>50%</height>
          </action>
          <action name="MaximizeHorz"/>
          <action name="MoveResizeTo">
            <x>0</x>
            <y>0</y>
          </action>
          <action name="NextWindow">
            <interactive>no</interactive>
            <dialog>none</dialog>
            <finalactions>
              <action name="UnmaximizeFull"/>
              <action name="MoveResizeTo">
                <height>50%</height>
              </action>
              <action name="MaximizeHorz"/>
              <action name="MoveResizeTo">
                <x>0</x>
                <y>-0</y>
              </action>
            </finalactions>
          </action>
        </then>
        <!-- Switch to vertical -->
        <else>
          <action name="UnmaximizeFull"/>
          <action name="MoveResizeTo">
            <width>50%</width>
          </action>
          <action name="MaximizeVert"/>
          <action name="MoveResizeTo">
            <x>0</x>
            <y>0</y>
          </action>
          <action name="NextWindow">
            <interactive>no</interactive>
            <dialog>none</dialog>
            <finalactions>
              <action name="UnmaximizeFull"/>
              <action name="MoveResizeTo">
                <width>50%</width>
              </action>
              <action name="MaximizeVert"/>
              <action name="MoveResizeTo">
                <x>-0</x>
                <y>0</y>
              </action>
            </finalactions>
          </action>
        </else>
      </action>
    </keybind>
